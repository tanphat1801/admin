<!-- Offer -->
<section id="offer">
    <div id="slide-show" class="carousel slide" data-ride="carousel">

        <!-- Indicators -->
        <ul class="carousel-indicators">
            <li data-target="#slide-show" data-slide-to="0" class="active"></li>
            <li data-target="#slide-show" data-slide-to="1"></li>
            <li data-target="#slide-show" data-slide-to="2"></li>
        </ul>
        
        <!-- The slideshow -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="w-100 rounded" height="450px" src="./images/offer1.jpg" alt="Offer">
            </div>
            <div class="carousel-item">
                <img class="w-100 rounded" height="450px" src="./images/offer2.jpg" alt="Offer">
            </div>
            <div class="carousel-item">
                <img class="w-100 rounded" height="450px" src="./images/offer3.png" alt="Offer">
            </div>
        </div>
        
        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#slide-show" data-slide="prev">
            <i class="fa-solid fa-circle-chevron-left text-light"></i>
        </a>
        <a class="carousel-control-next" href="#slide-show" data-slide="next">
            <i class="fa-solid fa-circle-chevron-right text-light"></i>
        </a>
        
    </div>
</section>

<!-- Content -->
<section id="content" class="mt-lg-5 mt-4">
<div class="row">
    <div id="categories" class="col-lg-3 col-md-3">
        <div class="heading p-3 rounded-top bg-color"><h3>CATEGORIES</h3></div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item list-group-item-action">
                <a href="/products/baby-and-child-care">Baby & Child Care</a>
            </li>
            </li>
            <li class="list-group-item list-group-item-action">
                <a href="/products/diet-and-nutrition">Diet & Nutrition</a>
            </li>

            <li class="list-group-item list-group-item-action">
                <a href="/products/natural-supplement">Natural Supplement</a>
            </li>

            <li class="list-group-item list-group-item-action">
                <a href="/products/personal-care">Personal Care</a>
            </li>
        </ul>
    </div>
    <div id="products-box" class="col-lg-9 col-md-9 pl-3">
        <div class="card rounded border">
            <div class="card-header">
                {{#if products}}
                    <strong>{{categoryName}}</strong>
                {{else}}
                    <strong>All Products</strong>
                {{/if}}
            </div>
            <div class="card-body p-0">
                <div class="row mx-auto">
                    {{#if products}}
                        {{#each products}}
                            <div class="col-lg-4 col-md-6 col-sm-6 p-0">
                                <div class="card product-card rounded-0 h-100 border-bottom-0">
                                    <img src="{{image}}" alt="product_img" class="card-img mx-auto p-3">
                                    <div class="card-body" product_id = "{{product_id}}">
                                        <a href="#" class="mt-3" data-toggle="modal" data-target="#product-modal"><h5 class="card-title">{{name}}</h5></a>
                                        <p class="card-price">Giá tiền: {{price}}</p>
                                        <p class="card-quantity text-muted">Số lượng: {{quantity}}</p>
                                        <p class="card-quantity">Mô tả: {{description}}</p>
                                    </div>
                                    <div class="card-footer">
                                        <button class="add-to-cart btn btn-success bg-color border-0" onclick="handleAddCart(this)">
                                            <i class="fa-solid fa-cart-plus text-white"></i>ADD TO CART
                                        </button>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
</section>

{{!-- Blog --}}
<section id="blog" class="mt-5">
    <h3 class="blog-heading">Tin tức về Y tế</h3>
    <div class="blog-content">
        {{#if blogs}}
            {{#each blogs}}
                <a class="blog-box media border-top border-bottom py-3" href="{{this.url}}">
                    <img src="images/uploads/{{this.image}}" alt="blog" class="blog-box-img mr-3">
                    <div class="blog-box-content media-body">
                        <h5 class="blog-box-heading">{{this.title}}</h5>
                        <p class="blog-box-text">{{this.description}}</p>
                    </div>
                </a>
            {{/each}}
        {{/if}}
    </div>
</section>