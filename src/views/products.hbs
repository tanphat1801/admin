<div class="row">
    <div id="categories" class="col-lg-3 col-md-3">
        <div class="heading p-3 rounded-top bg-color"><h3>CATEGORIES</h3></div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item list-group-item-action">
                <a href="/products/baby-and-child-care">Baby & Child Care</a>
            </li>
            </li>
            <li class="list-group-item list-group-item-action">
                <a href="/products/diet-and-nutrition">Diet & Nutrition</a>
            </li>

            <li class="list-group-item list-group-item-action">
                <a href="/products/natural-supplement">Natural Supplement</a>
            </li>

            <li class="list-group-item list-group-item-action">
                <a href="/products/personal-care">Personal Care</a>
            </li>
        </ul>
    </div>
    <div id="products-box" class="col-lg-9 col-md-9 pl-3">
        <div class="card rounded border">
            <div class="card-header">
                {{#if products}}
                    <strong>{{categoryName}}</strong>
                {{else}}
                    <strong>All Products</strong>
                {{/if}}
            </div>
            <div class="card-body p-0">
                <div class="row mx-auto">
                    {{#if products}}
                        {{#each products}}
                            <div class="col-lg-4 col-md-6 col-sm-6 p-0">
                                <div class="card product-card rounded-0 h-100 border-bottom-0">
                                    <img src="{{image}}" alt="product_img" class="card-img mx-auto p-3">
                                    <div class="card-body" product_id = "{{product_id}}">
                                        <a href="#" class="mt-3" data-toggle="modal" data-target="#product-modal"><h5 class="card-title">{{name}}</h5></a>
                                        <p class="card-price">Giá tiền: {{price}}</p>
                                        <p class="card-quantity text-muted">Số lượng: {{quantity}}</p>
                                        <p class="card-quantity">Mô tả: {{description}}</p>
                                    </div>
                                    <div class="card-footer">
                                        <button class="add-to-cart btn btn-success bg-color border-0" onclick="handleAddCart(this)">
                                            <i class="fa-solid fa-cart-plus text-white"></i>ADD TO CART
                                        </button>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>