<div class='row justify-content-center'>
	<div class='col-lg-5 col-md-6 col-sm-12'>
		<form
			method='post'
			action='http://localhost:3000/blogs/'
			class='border rounded w-100 mb-5 mx-auto px-3 pt-3'
			enctype='multipart/form-data'
		>
			<h3 class='text-center mb-4 m-color'>Create Blog</h3>
			<div class='form-group'>
				<label for='image'>Image</label>
				<input name='image' id='image' type='file' class='form-control' />
			</div>
			<div class='form-group'>
				<label for='title'>Title</label>
				<input
					name='title'
					id='title'
					type='text'
					class='form-control'
					placeholder='title'
				/>
			</div>
			<div class='form-group'>
				<label for='description'>Description</label>
				<input
					name='description'
					id='description'
					type='text'
					class='form-control'
					placeholder='description'
				/>
			</div>
			<div class='form-group'>
				<label for='url'>URL</label>
				<input
					name='url'
					id='url'
					type='text'
					class='form-control'
					placeholder='url'
				/>
			</div>
			<div class='form-group'>
				<button class='btn btn-success w-100 bg-color border-0'>Create</button>
			</div>
		</form>
	</div>
</div>