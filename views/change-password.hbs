<div class='row justify-content-center'>
	<div class='col-lg-5 col-md-6 col-sm-12'>
		<form
			method='post'
			action='http://localhost:3000/change-password/'
			class='border rounded w-100 mb-5 mx-auto px-3 pt-3'
			enctype='multipart/form-data'
		>
			<h3 class='text-center mb-4 m-color'>Chagne Password</h3>
			<div class='form-group'>
				<label for='current-password'>Current Password</label>
				<input
					name='currentPassword'
					id='current-password'
					type='password'
					class='form-control'
					placeholder='current password'
				/>
			</div>
			<div class='form-group'>
				<label for='new-password'>New Password</label>
				<input
					name='newPassword'
					id='new-password'
					type='password'
					class='form-control'
					placeholder='new password'
				/>
			</div>
			<div class='form-group'>
				<label for='password-confirm'>Password Confirm</label>
				<input
					name='passwordConfirm'
					id='password-confirm'
					type='password'
					class='form-control'
					placeholder='password-confirm'
				/>
			</div>

			<div class='form-group'>
				<button class='btn btn-success w-100 bg-color border-0'>Change</button>
			</div>
		</form>
	</div>
</div>